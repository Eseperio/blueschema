{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Access Rule Schema",
  "type": "object",
  "properties": {
    "role": {
      "type": "string",
      "description": "Role required to execute the action"
    },
    "permission": {
      "type": "array",
      "description": "Permissions required to execute the action",
      "items": { "$ref": "./permission.json" },
      "uniqueItems": true,
      "minItems": 1
    },
    "prompt": {
      "type": "string",
      "description": "Prompt that must be satisfied"
    }
  },
  "anyOf": [
    { "required": ["role"] },
    { "required": ["permission"] },
    { "required": ["prompt"] }
  ],
  "additionalProperties": false
}
