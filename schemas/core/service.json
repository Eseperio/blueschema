{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Service title"
    },
    "description": {
      "description": "Prompt describing what the service should do",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "./advancedDescription.json"
        }
      ]
    }
  },
  "required": ["title", "description"],
  "additionalProperties": false
}
