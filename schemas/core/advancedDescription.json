{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Advanced Description Schema",
  "type": "object",
  "properties": {
    "intent": {
      "type": "string",
      "description": "Description of the purpose (required)"
    },
    "examples": {
      "type": "array",
      "description": "Concrete usage examples",
      "items": {
        "$ref": "./example.json"
      }
    },
    "context": {
      "type": "string",
      "description": "Contextual information"
    },
    "constraints": {
      "type": "array",
      "description": "Important limits and rules",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["intent"],
  "additionalProperties": false
}
