{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Group Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Group name"
    },
    "description": {
      "description": "Optional description of the group's purpose",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "./advancedDescription.json"
        }
      ]
    },
    "routeSuffix": {
      "type": "string",
      "description": "Route segment appended to contained actions"
    },
    "actions": {
      "type": "array",
      "description": "Actions and nested groups within this group",
      "items": {
        "oneOf": [
          { "$ref": "./action.json" },
          { "$ref": "#" }
        ]
      },
      "minItems": 1
    }
  },
  "required": ["name", "routeSuffix", "actions"],
  "additionalProperties": false
}
