{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/core/permission.json",
  "title": "Permission Schema",
  "anyOf": [
    {
      "type": "string",
      "enum": ["guest", "logged", "any"],
      "description": "Built-in permission"
    },
    {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z][a-z0-9.]*$",
      "description": "Application-defined permission"
    }
  ]
}
