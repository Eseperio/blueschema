{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Table Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "table"
    },
    "description": {
      "type": "string",
      "description": "Instructions for customizing this table"
    },
    "sortable": {
      "type": "boolean",
      "description": "Allow sorting by columns"
    },
    "filterable": {
      "type": "boolean",
      "description": "Allow filtering rows"
    },
    "paginated": {
      "type": "boolean",
      "description": "Enable pagination"
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
