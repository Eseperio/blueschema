{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "View Schema",
  "type": "object",
  "properties": {
    "description": {
      "description": "Instructions for customizing this view",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "../core/advancedDescription.json"
        }
      ]
    },
    "rows": {
      "type": "array",
      "description": "Rows composing the view layout",
      "items": { "$ref": "./row.json" },
      "minItems": 1
    }
  },
  "required": ["rows"],
  "additionalProperties": false
}
