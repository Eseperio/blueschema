{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "View Schema",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "Instructions for customizing this view"
    },
    "rows": {
      "type": "array",
      "description": "Rows composing the view layout",
      "items": { "$ref": "./row.json" },
      "minItems": 1
    }
  },
  "required": ["rows"],
  "additionalProperties": false
}
