{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "List Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "list"
    },
    "description": {
      "type": "string",
      "description": "Instructions for customizing this list"
    },
    "ordered": {
      "type": "boolean",
      "description": "Whether the list is ordered"
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
