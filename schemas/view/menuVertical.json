{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vertical Menu Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "menuVertical"
    },
    "description": {
      "type": "string",
      "description": "Instructions for customizing this vertical menu"
    },
    "items": {
      "type": "array",
      "description": "Menu item identifiers",
      "items": { "type": "string" }
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
