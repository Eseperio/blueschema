{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "card"
    },
    "description": {
      "type": "string",
      "description": "Instructions for customizing this card"
    },
    "header": {
      "type": "string",
      "description": "Optional card header"
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
