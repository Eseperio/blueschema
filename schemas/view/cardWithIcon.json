{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card With Icon Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "cardWithIcon"
    },
    "description": {
      "type": "string",
      "description": "Instructions for customizing this card with icon"
    },
    "icon": {
      "type": "string",
      "description": "Icon name or reference"
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
