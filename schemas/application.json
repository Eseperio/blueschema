{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/application.json",
  "title": "Application",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "version", "entities", "actions", "dataSources"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string" },
    "description": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "./core/advancedDescription.json"
        }
      ]
    },
    "license": { "type": "string" },
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "./core/entity.json" },
      "uniqueItems": true
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "$ref": "./core/action.json" },
          { "$ref": "./core/group.json" }
        ]
      }
    },
    "dataSources": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "./core/dataSource.json" },
      "uniqueItems": true
    },
    "services": {
      "type": "array",
      "description": "Services the application exposes. Each service's description acts as its prompt.",
      "items": { "$ref": "./core/service.json" },
      "uniqueItems": true
    },
    "environment": {
      "type": "array",
      "description": "Environment variables required by the application, such as API keys.",
      "items": { "$ref": "./core/environment.json" },
      "uniqueItems": true
    },
    "accessControl": { "$ref": "./core/accessControl.json" }
  }
}
